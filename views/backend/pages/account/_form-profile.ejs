<!-- Start Form Data -->
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <form autocomplete="off" id="formProfile" class="" data-fv-framework="bootstrap4"
            data-fv-message="<%= __('Giá trị nhập vào không hợp lệ') %>" data-fv-icon-valid="glyphicon glyphicon-ok"
            data-fv-icon-invalid="glyphicon glyphicon-remove" data-fv-icon-validating="glyphicon glyphicon-refresh"
            data-fv-live="enabled" data-id="<%- profile ? profile.id : '' -%>">
            <div class="row">
                <div class="col-lg-4 col-xlg-3 col-md-5">
                    <div class="card">
                        <div class="card-body">
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                <input data-default-file="<%= profile.avatar ? profile.avatar : '/images/avatar.png' %>" type="file"
                                class="dropify" name="thumbnail" data-field="thumbnail" data-max-file-size="3M" />
                        </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-xlg-9 col-md-7">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label">
                                            <%= __('Địa chỉ Email') %>
                                        </label>
                                        <input value="<%= profile?profile.emailAddress:'' %>" type="text" class="form-control"
                                            data-fv-notempty="true" data-fv-notempty-message="<%= __('Email không được để trống') %>"
                                            data-fv-message="<%= __('Định dạng email không hợp lệ') %>"
                                            name="emailAddress" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" readonly/>
                                        <span class="text-help">
                                            <%= __('E-mail định dạng "abc@gmail.com".') %>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">
                                            <%= __('Số điện thoại') %>
                                        </label>
                                        <input value="<%= profile?profile.phone:'' %>" type="number" class="form-control"
                                            data-fv-notempty="true" data-fv-notempty-message="<%= __('Số điện thoại không được để trống') %>"
                                            data-fv-message="<%= __('Số điện thoại phải gồm 10 hoặc 11 chữ số') %>"
                                            name="phone" pattern="[0-9]{10,11}$" readonly />
                                        <span class="text-help">
                                            <%= __('Số điện thoại phải gồm 10 hoặc 11 chữ số') %>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">
                                            <%= __('Họ và tên') %>
                                        </label>
                                        <input value="<%= profile?profile.lastName:'' %>" type="text" class="form-control"
                                            name="fullName" />
                                    </div>
                                    <div class="form-group">
                                        <label for="birthDate" class="form-control-label">Ngày sinh</label>
                                        <input value="<%= profile?profile.birthday:'' %>" type="date" id="birthDate"
                                            class="form-control" name="dateOfBirth">
                
                                    </div>
                                    <!-- <div class="form-group">
                                        <label for="startWork" class="form-control-label">Ngày bắt đầu làm việc</label>
                                        <input value="<%= profile?profile.startWork:'' %>" type="date" id="startWork"
                                            class="form-control" name="startWork">
                
                                    </div> -->
                                    <br><br>
                                    <div class="form-group">
                                        <label class="form-control-label">
                                            <%= __('Mật khẩu') %>
                                        </label>
                                        <input type="password" class="form-control" name="password" id="password"
                                            data-fv-message="<%= __('Mật khẩu phải dài ít nhất 6 kí tự và bao gồm số, chữ in hoa, chữ in thường.') %>"
                                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" />
                
                                        <span class="text-help">
                                            <%= __('Mật khẩu phải dài ít nhất 6 kí tự và bao gồm số, chữ in hoa, chữ in thường.') %>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">
                                            <%= __('Nhập lại mật khẩu') %>
                                        </label>
                                        <input type="password" class="form-control" name="passwordConfirm" id="confirm_password" />
                                    </div>
                                    <div class="alert alert-dismissible hidden" role="alert" data-alert-update="<%= __('Cập nhật thành công.') %>">
                                        <%= __('Cập nhật thành công.') %>
                                    </div>
                                    <button type="reset" class="btn btn-default btn-outline btn-reset-page-account waves-effect waves-classic">
                                        <%= __('Khôi phục') %>
                                    </button>
                                    <button id="btnFormProfile" type="submit" class="btn btn-primary waves-effect waves-classic">
                                        <%= __('Cập nhật') %>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


